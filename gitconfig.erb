[user]
  name = <%= print("Git name"); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Git email"); STDOUT.flush; STDIN.gets.chomp %>
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  di = diff
  dc = diff --cached
  ignored = "!git ls-files --others --exclude-standard"
  datetag = !git tag `date \"+%Y%m%d%H%M\"`
  unadd = reset HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  l = log --graph --abbrev-commit --date=relative 
  la = !git l --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
  up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
[merge]
  tool = opendiff
  summary = true
[branch]
  autosetupmerge = true
[diff]
  color = auto
  rename = copy
[pager]
  color = true
[status]
  color = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
[gui]
  fontui = -family Consolas -size 13 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family Consolas -size 13 -weight normal -slant roman -underline 0 -overstrike 0
[github]
  user = <%= print("Github username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("API Token: "); STDOUT.flush; STDIN.gets.chomp %>
  password = <%= print("Password: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
  default = current
[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
